<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/chooseagr"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="11.5dp"
                android:layout_height="11.5dp"
                android:background="@mipmap/del"
                android:padding="@dimen/toolbariconpadding"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"
                android:id="@+id/cancel_chooseAgr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换乘车二维码"
                android:textSize="15.5sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colore2e2e2"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chooseagr_view"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0.5dp"
            android:overScrollMode="never">

        </ListView>
    </LinearLayout>


</RelativeLayout>
