<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.EditUserInforActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarheight"
        android:background="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/iv_back_to"
            android:layout_width="@dimen/toolbariconwidth"
            android:layout_height="@dimen/toolbariconheight"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/toolbariconmarginleft"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/toolbariconpadding"
            android:src="@mipmap/black_left_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            android:textColor="@color/black"
            android:textSize="@dimen/titletvsize" />

        <TextView
            android:id="@+id/ac_set_user_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="保存"
            android:textColor="@color/blue"
            android:textSize="14sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ac_set_user_avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padd_20">

        <ImageView
            android:id="@+id/ac_set_user_avatar"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padd_20"
            android:paddingTop="@dimen/dp_10"
            android:text="修改头像"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_dfdfdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:text="昵称"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/ac_set_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_40"
            android:hint="请输入您的昵称"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:maxLength="8"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_dfdfdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:text="签名"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/ac_set_user_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_40"
            android:hint="请输入您的签名"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:maxLength="50"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_dfdfdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:text="电话"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/ac_set_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_40"
            android:hint="请输入您的手机号"
            android:clickable="false"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16"
            android:maxLength="11"/>
    </LinearLayout>

</LinearLayout>
